/* pages/main/main.wxss */
view.center{
  font-size: 16px;
  color:#666666;
  display:flex;
  flex-direction: row;
}
.left{
  width:30%;
  text-align:center;
  background:#ececec;
}
.left>view{
  width:100%;
  height:120rpx;
  border-bottom:1px solid #d4d2d2;
  line-height:120rpx;
}
.left>view.active{
  background-color:white;
}
.right{
  padding:10rpx;
  width:70%;
}
.right>.container{
  height:800rpx; overflow:hidden;
}
.right>.container>.list{
  transition:all .5s linear;
}
.bigImage>image{
  width:100%;
  height:300rpx;
}
.item{
  display:flex;
  height:200rpx;
  margin-top:20rpx;
}
.item>.itemLeft{
  width:40%;
   /* border:1px solid #f00; */
   text-align:center;
}
.item>.itemLeft>image{
  width:150rpx;
  height:100%;
}
.item>.itemRight{
  width:60%;
}
.title{
  font-size:18px;
  color:#000;
}
.brief{
  font-size:12px;
  height:68rpx;
  overflow:hidden;
  /* white-space: nowrap; */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.milkyList>text{
  display:inline-block;
  margin-top:10rpx;
}
.price{
  margin-top:10rpx;
  color:#729c77;
  font-size:20px;
  font-weight: bold;
}
.lastLine{
  display:flex;
  height:60rpx;
  line-height:60rpx;
}
.lastLine>.price{
  float:left;
}
.lastLine>.btn1{
  display:flex;
  margin-top:10rpx;
  margin-left:20rpx;
  justify-content: space-between;
}
.btn1>.count{
  padding-left:15rpx;
  padding-right:15rpx;
}
.btn1>view>image{
  width:60rpx;
  height:60rpx;
}
.add{
  margin-left:80rpx;
}
.closeBtn>image{
  width:50rpx;
  height:50rpx;
}
.chooseBox .itemLeft{
  width:25%;
}
.chooseBox .brief{
  color:#c0bdbd;
  font-size:13px;
}
.chooseBox .closeBtn{
  margin-left:60rpx;
  margin-top:0;
}
/* 商品选购弹出框 */
.chooseBox{
  padding-left:20rpx;
  padding-right:20rpx;
}
.type{
  margin-top:20rpx;
}
.typeTitle{
  color:#729c77;
  font-size:16px;
}
.typeList{
  display:flex;
  flex-wrap: wrap;
}
.typeList>view{
  font-size:12px;
  background: #ececec;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  margin-right:25rpx;
  padding-left:25rpx;
  padding-right:25rpx;
  margin-top:20rpx;
  color:#2e2d2d;
}
.typeList>view.active{
  color:#1a2e1d;
  background:#729c77; 
}
.aprice{
  color:#729c77; 
  font-weight: bold;
}
.activeText{
  color:#1a2e1d;
}
.chooseBtn{
  background:#729c77;
  color:#fff;
  margin-top:30rpx;
  margin-bottom:20rpx;
}